<%# sudoers config for admin users, giving them access to run anything as root %>

<%
    admin_users = Array(scope.lookupvar('::config::admin_users')).flatten
    if (admin_users.length > 0) -%>
User_Alias ADMIN_USERS = <%= admin_users.join(', ') %>
ADMIN_USERS ALL=(root) NOPASSWD: ALL
<% end -%>
