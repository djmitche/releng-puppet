[org.gnome.system.proxy]
mode = 'manual'
ignore-hosts = ['<%= @exceptions.join("', '") %>']
use-same-proxy = true

[org.gnome.system.proxy.http]
enabled = true
host = '<%= @host %>'
port = <%= @port %>
