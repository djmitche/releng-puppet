<% [ 'http_proxy', 'HTTP_PROXY',
     'https_proxy', 'HTTPS_PROXY',
     'ftp_proxy', 'FTP_PROXY' ].each do |var| -%>
<%= var %>="<%= @web_proxy_url %>"
<% end
if @web_proxy_exceptions
  exc_str = @web_proxy_exceptions.join(',')
%>
no_proxy="<%= exc_str %>"
NO_PROXY="<%= exc_str %>"
<%- end -%>
