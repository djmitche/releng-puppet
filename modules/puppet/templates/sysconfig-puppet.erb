# The puppetmaster server
PUPPET_SERVER=<%= scope.lookupvar('settings::puppet_server') %>

# If you wish to specify the port to connect to do so here
#PUPPET_PORT=8140

# Run once, in the foreground (the initscript will run multiple times if necessary)
PUPPET_EXTRA_OPTS="--onetime --no-daemonize --logdest=console --logdest=syslog --color=false"

# how long to sleep between runs of puppet
SLEEP_INTERVAL=60

# how many tries before rebooting
REBOOT_AFTER=10
