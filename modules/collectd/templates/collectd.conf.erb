##############################################################################
# Global                                                                     #
#----------------------------------------------------------------------------#
# Global settings for the daemon.                                            #
##############################################################################

Hostname    "<%= scope.lookupvar('::fqdn') %>"
#FQDNLookup   true
#BaseDir     "/var/lib/collectd"
#PIDFile     "/var/run/collectd.pid"
#PluginDir   "/usr/lib64/collectd"
#TypesDB     "/usr/share/collectd/types.db"

#----------------------------------------------------------------------------#
# Interval at which to query values. This may be overwritten on a per-plugin #
# base by using the 'Interval' option of the LoadPlugin block:               #
#   <LoadPlugin foo>                                                         #
#       Interval 60                                                          #
#   </LoadPlugin>                                                            #
#----------------------------------------------------------------------------#
Interval     <%= scope.lookupvar('collectd::settings::global_poll_interval') %>

# Enables a queue size limit which drops metrics if unable to offload them
WriteQueueLimitHigh <%= scope.lookupvar('collectd::settings::global_write_queue_limit_high') %>
WriteQueueLimitLow <%= scope.lookupvar('collectd::settings::global_write_queue_limit_low') %>

#Timeout      2
#ReadThreads  5
#WriteThreads 5

##############################################################################
# Logging                                                                    #
#----------------------------------------------------------------------------#
# Plugins which provide logging functions should be loaded first, so log     #
# messages generated when loading or configuring other plugins can be        #
# accessed.                                                                  #
##############################################################################

LoadPlugin syslog
<Plugin syslog>
       LogLevel <%= scope.lookupvar('collectd::settings::syslog_level') %>
</Plugin>

LoadPlugin write_graphite
<Plugin write_graphite>
    <Node "<%= scope.lookupvar('collectd::settings::graphite_cluster_fqdn') %>">
        Host "<%= scope.lookupvar('collectd::settings::graphite_cluster_fqdn') %>"
        Port "<%= scope.lookupvar('collectd::settings::graphite_port') %>"
        Prefix "<%= scope.lookupvar('collectd::settings::graphite_prefix') %>"
#       Postfix ""
        StoreRates true
        AlwaysAppendDS false
        EscapeCharacter "_"
        SeparateInstances true
    </Node>
</Plugin>

Include "<%= scope.lookupvar('collectd::settings::plugindir') %>"
