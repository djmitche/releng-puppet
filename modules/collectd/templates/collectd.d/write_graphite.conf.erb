LoadPlugin "write_graphite"

<Plugin "write_graphite">
<% @nodes.each do |iname,ihash| -%>
    <Node "<%= iname %>">
        Host "<%= iname %>"
        Port "<%= ihash['port'] %>"
        Prefix "<%= ihash['prefix'] %>"
        StoreRates true
        AlwaysAppendDS false
        EscapeCharacter "_"
        SeperateInstances true
    </Node>
<% end -%>
</Plugin>
