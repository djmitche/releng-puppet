# get regular Ubuntu packages from the puppetagain mirror
MIRRORSITE="http://<%= scope.lookupvar('::config::apt_repo_server') %>/repos/apt/ubuntu"

# and also reference the releng repositories for dependencies
OTHERMIRROR="deb http://<%= scope.lookupvar('::config::apt_repo_server') %>/repos/apt/releng precise main|deb http://<%= scope.lookupvar('::config::apt_repo_server') %>/repos/apt/releng-updates precise-updates all"

# and include both main and universe
COMPONENTS="main universe"

# releng repos are untrusted..
ALLOWUNTRUSTED=yes
