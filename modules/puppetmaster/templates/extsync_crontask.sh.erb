OUTPUT=$(mktemp /etc/hiera/<%= title %>-XXXXXXX).eyaml
trap "rm -rf $OUTPUT" EXIT

# run the content-generation script, failing on any errors
set -e
<%= generation_script %>

# success -- swap the file in atomically
mv $OUTPUT /etc/hiera/<%= title %>.eyaml
