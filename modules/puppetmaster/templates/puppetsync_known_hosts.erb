<%
    dist_master = scope::lookupvar('::puppetmaster::settings::distinguished_master')

    # add host keys here for any hosts that might be the distinguished master
    known_keys = {
        'relabs02.build.mtv1.mozilla.com' => 'ssh-rsa ',
        'relabs03.build.mtv1.mozilla.com' => 'ssh-rsa ',
        'relabs08.build.mtv1.mozilla.com' => 'ssh-rsa ',
    }
    known_key = known_keys[dist_master]
    if not known_key
      throw "add host key for #{dist_master} to modules/puppetmaster/templates/puppetsync_known_hosts.erb"
    end
-%>
<%= dist_master %> <%= known_key %>
