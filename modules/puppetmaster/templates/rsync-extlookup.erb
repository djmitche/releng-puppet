MAILTO="<%= scope.lookupvar('::config::puppet_notif_email') %>"
# note that this rsync runs locally as root, but remotely as puppetsync; the -e
# instructs SSH to use puppetsync's SSH, and to use known_hosts appropriately
*/5 * * * * root rsync -e 'ssh -l puppetsync -i <%= @puppetsync_home %>/.ssh/id_rsa -oBatchMode=yes -oStrictHostKeyChecking=yes -oCheckHostIP=no' --delete -rlpt <%= @distinguished_master %>:/etc/puppet/production/manifests/extlookup/ /etc/puppet/production/manifests/extlookup/
MAILTO=root
